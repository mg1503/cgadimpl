// =============================================================================
// FILE: ops/trigonometry.def
// PURPOSE: Trigonometric and hyperbolic functions
// =============================================================================
//
// Standard trigonometric functions and their hyperbolic counterparts.
// All are unary element-wise operations.
//
// VJP (Vector-Jacobian Product) patterns:
//   - Sin:  ∂L/∂X = gy * cos(x)
//   - Cos:  ∂L/∂X = gy * -sin(x)
//   - Sinh: ∂L/∂X = gy * cosh(x)
//   - Cosh: ∂L/∂X = gy * sinh(x)
//
// Use cases in ML:
//   - Positional encodings (sin/cos)
//   - Smooth activations
// =============================================================================

// --- Trigonometric Functions ---
OP(Sin,       1,    "sin")         // sin(x)
OP(Cos,       1,    "cos")         // cos(x)
OP(Tan,       1,    "tan")         // tan(x)

// --- Hyperbolic Functions ---
OP(Sinh,      1,    "sinh")        // sinh(x) = (e^x - e^-x) / 2
OP(Cosh,      1,    "cosh")        // cosh(x) = (e^x + e^-x) / 2

// --- Inverse Trigonometric Functions ---
OP(Asin,      1,    "asin")        // asin(x)
OP(Acos,      1,    "acos")        // acos(x)
OP(Atan,      1,    "atan")        // atan(x)

// --- Inverse Hyperbolic Trigonometric Functions ---
OP(ASinh,      1,    "asinh")        // asinh(x)
OP(ACosh,      1,    "acosh")        // acosh(x)
OP(ATanh,      1,    "atanh")        // atanh(x)
